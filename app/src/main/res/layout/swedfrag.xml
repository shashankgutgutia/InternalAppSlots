<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:id="@+id/linearLayout">
        <TextView
            android:paddingStart="20dp"
            android:text="8-9 AM"
            android:textSize="16dp"
            android:id="@+id/text8"
            android:background="#faedff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/srwed"
            android:layout_below="@id/text8">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:paddingStart="20dp"
            android:text="9-10 AM"
            android:textSize="16dp"
            android:id="@+id/text9"
            android:background="#faedff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/srwed2">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:paddingStart="20dp"
            android:text="10-11 AM"
            android:textSize="16dp"
            android:id="@+id/text28"
            android:background="#faedff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/srwed3">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:paddingStart="20dp"
            android:text="11-12 AM"
            android:textSize="16dp"
            android:id="@+id/text23"
            android:background="#faedff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/srwed4">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>